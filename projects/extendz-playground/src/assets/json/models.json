                "relationshipType": "oneToMany",
                "displayField": "name"
              }
            },
            { "property": { "name": "quantity", "type": "number" } }
          ],
          "rows": [
            { "property": { "name": "color", "type": "color", "width": "100px" } },
            {
              "property": {
                "name": "capacity",
                "type": "unit",
                "units": ["MB", "GB", "TB"],
                "width": "100px"
              }
            },
            {
              "property": {
                "name": "weight",
                "type": "unit",
                "units": ["mg", "g", "kg"],
                "width": "100px"
              }
            },
            { "property": { "name": "size", "width": "100px" } }
          ]
        }
      },
      "Fragile": {
        "name": "Fragile",
        "type": "boolean"
      },
      "echoFriendly": {
        "name": "echoFriendly",
        "type": "boolean"
      }
    },
    "projections": {
      "dataTable": [
        {
          "name": "image",
          "type": "image"
        },
        {
          "name": "brand",
          "type": "string"
        },
        {
